# Environment Configuration for 100xJobs
# Copy this file to .env and update the values for your environment

# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-vercel-domain.vercel.app

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///db.sqlite3

# For production (PostgreSQL - recommended for Vercel)
# DATABASE_URL=postgresql://username:password@hostname:5432/database_name
# For Vercel Postgres:
# DATABASE_URL=postgres://default:password@hostname:5432/verceldb

# For production with external database services:
# Supabase: postgresql://postgres:password@db.supabase.co:5432/postgres
# PlanetScale: mysql://username:password@hostname:3306/database_name
# Railway: postgresql://postgres:password@hostname:5432/railway

# Email Configuration (for password reset, notifications)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Media and Static Files
MEDIA_URL=/media/
STATIC_URL=/static/

# Security Settings (for production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Application Settings
SITE_NAME=100xJobs
SITE_URL=http://localhost:8000
ADMIN_EMAIL=admin@100xjobs.com

# Third-party API Keys (if needed)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# LINKEDIN_API_KEY=your-linkedin-api-key
# INDEED_API_KEY=your-indeed-api-key
